
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var session = (UserLogin)Session[OnlineShop.Common.CommonConstant.USER_SESSION];
}
@section jsFooter{

    <script src="/assets/net/js/Controller/ContactController.js"></script>
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h2>Nội dung liên hệ</h2>
                <br />  
                <textarea id="txtContent" class="form-control" required="required"></textarea>
                <br />
                @if (session != null)
                {
                    <button id="btnSend" class="btn btn-success">Gửi đi</button>
                }
                else
                {
                    <button class="btn btn-success"><a href="/Login/Index">Gửi đi</a></button>
                }
            </div>
            <div class="col-md-6">
                <h2>Bản đồ</h2>
                <div class="map" id="gmap_canvas">
                    <div class="mapouter">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.479626177768!2d106.77001304227221!3d10.85107799583052!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175270ad28d48ab%3A0xa6c02de0a7c40d6c!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyBTxrAgUGjhuqFtIEvhu7kgVGh14bqtdCBUUC4gSOG7kyBDaMOtIE1pbmg!5e0!3m2!1svi!2s!4v1575382092689!5m2!1svi!2s" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                        <style>
                            .mapouter {
                                position: relative;
                                text-align: right;
                                height: 500px;
                                width: 500px;
                            }

                            .gmap_canvas {
                                overflow: hidden;
                                background: none !important;
                                height: 500px;
                                width: 500px;
                            }
                        </style>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

