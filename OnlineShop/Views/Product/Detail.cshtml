@model Model.EF.Product
@{
    var listProduct = (List<Model.EF.Product>)ViewBag.Product;
    var listComment = (List<Model.EF.FeedBack>)ViewBag.listfeedback;
    var session = (UserLogin)Session[OnlineShop.Common.CommonConstant.USER_SESSION];
}
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>NHT Sport Shop</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Place favicon.ico in the root directory -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/net/images/favicon.ico">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">


    <!-- All css files are included here. -->
    <!-- Bootstrap fremwork main css -->
    <link rel="stylesheet" href="/assets/net/css/bootstrap.min.css">
    <!-- Owl Carousel main css -->
    <link rel="stylesheet" href="/assets/net/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/net/css/owl.theme.default.min.css">
    <!-- This core.css file contents all plugings css file. -->
    <link rel="stylesheet" href="/assets/net/css/core.css">
    <!-- Theme shortcodes/elements style -->
    <link rel="stylesheet" href="/assets/net/css/shortcode/shortcodes.css">
    <!-- Theme main style -->
    <link rel="stylesheet" href="/assets/net/css/style.css">
    <!-- Responsive css -->
    <link rel="stylesheet" href="/assets/net/css/responsive.css">
    <!-- User style -->
    <link rel="stylesheet" href="/assets/net/css/custom.css">


    <!-- Modernizr JS -->
    <script src="/assets/net/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!-- Body main wrapper start -->
    <!-- End Mainmenu Area -->
    <!-- End Header Style -->
    <!-- Start Offset Wrapper -->
    <!-- End Offset Wrapper -->
    <!-- Start Bradcaump area -->

    <div class="col-xs-12">
        <div class="bradcaump__inner text-center">
            <br>
            <h2 class="bradcaump-title">Chi tiết sản phẩm</h2>
            <nav class="bradcaump-inner">
                <a class="breadcrumb-item" href="/Home/Index">Về trang chủ</a>
            </nav>
        </div>
    </div>
    <!-- End Bradcaump area -->
    <!-- Start Product Details -->
    <section class="htc__product__details pt--120 pb--100 bg__white">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
                    <div class="product__details__container">
                        <!-- Start Small /assets/net/images -->
                        <!-- End Small /assets/net/images -->
                        <div class="product__big__/assets/net/images">
                            <div class="portfolio-full-image tab-content">
                                <div role="tabpanel" class="tab-pane fade in active product-video-position" id="img-tab-1">
                                    <img src="@Model.Image" alt="full-image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12 smt-30 xmt-30">
                    <div class="htc__product__details__inner">
                        <div class="pro__detl__title">
                            <h2>@Model.Name</h2>
                        </div>
                        <div class="pro__dtl__rating">
                            <ul class="pro__rating">
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                            </ul>
                        </div>
                        <div class="pro__details">
                            <p></p>
                        </div>
                        <ul class="pro__dtl__prize">
                            <li class="old__prize">@Model.PromotionPrice$</li>
                            <li>@Model.Price$</li>
                        </ul>
                        <ul class="pro__dtl__btn">
                            @if (session != null)
                            {
                                <button><a href="/them-gio-hang?productId=@Model.ID&quantity=1&size=">Thêm vào giỏ hàng</a></button>
                            }
                            else
                            {
                                <button><a href="/Login/Index">Thêm vào giỏ hàng</a></button>
                            }
                        </ul>
                        <div class="pro__social__share">
                            <h2>Share :</h2>
                            <ul class="pro__soaial__link">
                                <li><a href="#"><i class="zmdi zmdi-twitter"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-instagram"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Product Details -->
    <!-- Start Product tab -->
    <section class="htc__product__details__tab bg__white pb--120">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                    <ul class="product__deatils__tab mb--60" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#description" role="tab" data-toggle="tab">Mô tả</a>
                        </li>
                        <!-- <li role="presentation">
                            <a href="#sheet" role="tab" data-toggle="tab">Data sheet</a>
                        </li> -->
                        <li role="presentation">
                            <a href="#reviews" role="tab" data-toggle="tab">Đánh giá</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="product__details__tab__content">
                        <!-- Start Single Content -->
                        <div role="tabpanel" id="description" class="product__tab__content fade in active">
                            <div class="product__description__wrap">
                                <div class="product__desc">
                                    <h2 class="title__6">Details</h2>
                                    <p>@Model.Detail</p>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Content -->
                        <!-- Start Single Content -->
                        <!-- End Single Content -->
                        <!-- Start Single Content -->
                        <div role="tabpanel" id="reviews" class="product__tab__content fade">
                            <div class="review__address__inner">
                                <!-- Start Single Review -->
                                <div class="pro__review">
                                    @foreach (var item in listComment)
                                    {
                                        if (item.ProductID == Model.ID)
                                        {
                                            <div class="col-md-12">
                                                <div class="review__details">
                                                    <div class="review__date">
                                                        <span>@item.CreatedDate</span> <br />
                                                        <span>Tên khách hàng: @item.Customer</span> <br />
                                                        <span>Nội dung: @item.Content</span> <br />
                                                    </div>
                                                    <br />
                                                </div>
                                            </div>
                                            <br />
                                        }
                                        <br />
                                    }
                                </div>
                                <!-- End Single Review -->
                                <!-- Start Single Review -->
                                <!-- End Single Review -->
                            </div>
                            <!-- Start RAting Area -->
                            <div class="rating__wrap">
                                <h2 class="rating-title">Write  A review</h2>
                            </div>
                            <!-- End RAting Area -->
                            <div class="review__box">
                                <form id="review-form">
                                    <div class="single-review-form">
                                        <div class="review-box message">
                                            <textarea id="txtContent" placeholder="Write your review" required></textarea>
                                            @if (session != null)
                                            {
                                                <div class="review-btn">
                                                    <button id="btnComment" data-id="@Model.ID" class="fv-btn">submit review</button>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="review-btn">
                                                    <button id="btnComment" data-id="@Model.ID" class="fv-btn"><a href="/Login/Index">submit review</a></button>
                                                </div>
                                            }
                                        </div>
                                    </div>


                                </form>
                            </div>
                        </div>
                        <!-- End Single Content -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Product tab -->
    <!-- Start Footer Area -->
    <footer class="htc__foooter__area gray-bg">
        <div class="container">
            <div class="row">
                <div class="footer__container clearfix">
                    <!-- Start Single Footer Widget -->
                    <div class="col-md-3 col-lg-3 col-sm-6">
                        <div class="ft__widget">
                            <div class="ft__logo">
                                <a href="index.html">
                                    <img src="/assets/net/images/logo/logo.png" alt="footer logo">
                                </a>
                            </div>
                            <div class="footer-address">
                                <ul>
                                    <li>
                                        <div class="address-icon">
                                            <i class="zmdi zmdi-pin"></i>
                                        </div>
                                        <div class="address-text">
                                            <p>01 Võ Văn Ngân, phường Linh Chiểu <br> Quận Thủ Đức, TP.HCM</p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="address-icon">
                                            <i class="zmdi zmdi-email"></i>
                                        </div>
                                        <div class="address-text">
                                            <a href="#"> NHTShop@gmail.com</a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="address-icon">
                                            <i class="zmdi zmdi-phone-in-talk"></i>
                                        </div>
                                        <div class="address-text">
                                            <p>+012 345 678 102 </p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <ul class="social__icon">
                                <li><a href="#"><i class="zmdi zmdi-twitter"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-instagram"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- End Single Footer Widget -->
                    <!-- Start Single Footer Widget -->
                    <div class="col-md-3 col-lg-2 col-sm-6 smt-30 xmt-30">
                        <div class="ft__widget">
                            <h2 class="ft__title">Phân loại</h2>
                            <ul class="footer-categories">
                                <li><a href="shop-sidebar.html">Áo đấu CLB</a></li>
                                <li><a href="shop-sidebar.html">Áo đấu ĐTQG</a></li>
                                <li><a href="shop-sidebar.html">Bóng đá</a></li>
                                <li><a href="shop-sidebar.html">Cầu lông</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Start Single Footer Widget -->
                    <div class="col-md-3 col-lg-2 col-sm-6 smt-30 xmt-30">
                        <div class="ft__widget">
                            <h2 class="ft__title">Thông tin</h2>
                            <ul class="footer-categories">
                                <li><a href="about.html">Về chúng tôi</a></li>
                                <li><a href="contact.html">Liên hệ với chúng tôi</a></li>
                                <li><a href="#">Điều khoản và dịch vụ</a></li>
                                <li><a href="#">Thanh toán và đổi trả</a></li>
                                <li><a href="#">Giao hàng</a></li>
                                <li><a href="#">Chính sách riêng tư</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Start Single Footer Widget -->
                    <div class="col-md-3 col-lg-3 col-lg-offset-1 col-sm-6 smt-30 xmt-30">
                        <div class="ft__widget">
                            <h2 class="ft__title">Bản tin</h2>
                            <div class="newsletter__form">
                                <p>Đăng kí theo dõi bản tin của chúng tôi và nhận giảm giá 10% với lần thanh toán đầu tiên .</p>
                                <div class="input__box">
                                    <div id="mc_embed_signup">
                                        <form action="#" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                                            <div id="mc_embed_signup_scroll" class="htc__news__inner">
                                                <div class="news__input">
                                                    <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Địa chỉ email" required>
                                                </div>
                                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
                                                <div class="clearfix subscribe__btn">
                                                    <input type="submit" value="Send" name="subscribe" id="mc-embedded-subscribe" class="bst__btn btn--white__color">

                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Single Footer Widget -->
                </div>
            </div>
            <!-- Start Copyright Area -->
            <div class="htc__copyright__area">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                        <div class="copyright__inner">
                            <div class="copyright">
                                <p>
                                    © 2019 <a href="https://freethemescloud.com/">Bản quyền của công ty NHT Sport Shop</a>
                                    <br>All Right Reserved.
                                </p>
                            </div>
                            <ul class="footer__menu">
                                <li><a href="index.html">Trang chủ</a></li>
                                <li><a href="shop.html">Sản phẩm</a></li>
                                <li><a href="contact.html">Liên hệ với chúng tôi</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Copyright Area -->
        </div>
    </footer>
    <!-- End Footer Area -->
    </div>
    <!-- Body main wrapper end -->
