@model Model.EF.Product
@{
    var listProduct = (List<Model.EF.Product>)ViewBag.Product;
    var session = (UserLogin)Session[OnlineShop.Common.CommonConstant.USER_SESSION];
}
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>NHT Sport Shop</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Place favicon.ico in the root directory -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/net/images/favicon.ico">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">


    <!-- All css files are included here. -->
    <!-- Bootstrap fremwork main css -->
    <link rel="stylesheet" href="/assets/net/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/net/css/jquery-ui.css" />
    <!-- Owl Carousel main css -->
    <link rel="stylesheet" href="/assets/net/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/net/css/owl.theme.default.min.css">
    <!-- This core.css file contents all plugings css file. -->
    <link rel="stylesheet" href="/assets/net/css/core.css">
    <!-- Theme shortcodes/elements style -->
    <link rel="stylesheet" href="/assets/net/css/shortcode/shortcodes.css">
    <!-- Theme main style -->
    <link rel="stylesheet" href="/assets/net/css/style.css">
    <!-- Responsive css -->
    <link rel="stylesheet" href="/assets/net/css/responsive.css">
    <!-- User style -->
    <link rel="stylesheet" href="/assets/net/css/custom.css">


    <!-- Modernizr JS -->
    <script src="/assets/net/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Body main wrapper start -->
    <div class="wrapper fixed__footer">
        <!-- Start Header Style -->
        <header id="header" class="htc-header header--3 bg__white">
            <!-- Start Mainmenu Area -->
            <div id="sticky-header-with-topbar" class="mainmenu__area sticky__header">
                <div class="container">
                    <div class="row">
                        <div class="col-md-2 col-lg-2 col-sm-3 col-xs-3">
                            <div class="logo">
                                <a href="index.html">
                                    <img src="/assets/net/images/logo/logo.png" alt="logo">
                                </a>
                            </div>
                        </div>
                        <!-- Start MAinmenu Ares -->
                        <div class="col-md-8 col-lg-8 col-sm-6 col-xs-6">
                            <nav class="mainmenu__nav hidden-xs hidden-sm">
                                <ul class="main__menu">
                                    <li class="drop"><a href="/">Trang chủ</a></li>
                                    <li class="drop">
                                        <a href="/Product/Index">Tất cả mặt hàng</a>
                                    </li>
                                    <li><a href="/About/Index">Giới thiệu</a></li>
                                    <li><a href="/Contact/Index">Liên hệ</a></li>
                                </ul>
                            </nav>
                        </div>
                        <!-- End MAinmenu Ares -->
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <ul class="menu-extra">
                                @if (session != null)
                                {
                                    <li class="search search__open hidden-xs"><span class="ti-search"></span></li>
                                    <li class="cart__menu"><span class="ti-shopping-cart"></span></li>
                                    <li>Xin chào:@session.Username</li>
                                    <li>@Html.ActionLink("Đăng Xuất", "Logout", "Login")</li>
                                }
                                else
                                {
                                    <li class="search search__open hidden-xs"><span class="ti-search"></span></li>
                                    <li><a href="/Login/Index"><span class="ti-user"></span></a></li>
                                    <li class="cart__menu"><span class="ti-shopping-cart"></span></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="mobile-menu-area"></div>
                </div>
            </div>
            <!-- End Mainmenu Area -->
        </header>
        <!-- End Header Style -->
        <div class="body__overlay"></div>
        <!-- Start Offset Wrapper -->
        <div class="offset__wrapper">
            <!-- Start Search Popap -->
            <div class="search__area">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="search__inner">
                                <form action="/tim-kiem" method="get">
                                    <input placeholder="Search here... " id="txtKeyword" name="keyword" type="text">
                                    <button type="submit"></button>
                                </form>
                                <div class="search__close__btn">
                                    <span class="search__close__btn_icon"><i class="zmdi zmdi-close"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Search Popap -->
            <!-- Start Offset MEnu -->
            <!-- End Offset MEnu -->
            <!-- Start Cart Panel -->
            @{ Html.RenderAction("HeaderCart", "Home");}
            <!-- End Cart Panel -->
        </div>
        <!-- End Offset Wrapper -->
        <!-- Start Bradcaump area -->
        <div class="ht__bradcaump__area" style="background: rgba(0, 0, 0, 0) url(/assets/net/images/bg/grass.png) no-repeat scroll center center / cover ;">
            <div class="ht__bradcaump__wrap">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="bradcaump__inner text-center">
                                <h2 class="bradcaump-title"></h2>
                                <nav class="bradcaump-inner">
                                    <a class="breadcrumb-item" href="index.html"></a>
                                    <!-- <span class="brd-separetor">/</span> -->
                                    <!-- <span class="breadcrumb-item active">Shop Page</span> -->
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Bradcaump area -->
        <!-- Start Our Product Area -->
        <section class="htc__product__area shop__page ptb--130 bg__white">
            <div class="container">
                <div class="htc__product__container">
                    <!-- Start Product MEnu -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="filter__menu__container">
                                <div class="product__menu">
                                    <h2>Tất cả mặt hàng</h2>                                   
                                </div>                               
                            </div>
                        </div>
                    </div>
                    <!-- Start Filter Menu -->
                    <!-- End Filter Menu -->
                    <!-- End Product MEnu -->
                    <div class="row">
                        <div class="product__list another-product-style">
                            <!-- Start Single Product -->
                            <!--Premier League-->
                            @foreach (var item in listProduct)
                            {
                                var url = "/chi-tiet/" + item.MetaTitle + "-" + @item.ID;
                                <div class="col-md-3 single__pro col-lg-3 cat--1 col-sm-4 col-xs-12" style="height:430px;">
                                    <div class="product foo">
                                        <div class="product__inner">
                                            <div class="pro__thumb">
                                                <a href="@url">
                                                    <img src="@item.Image" alt="@item.Name">
                                                </a>
                                            </div>
                                            <div class="product__hover__info">
                                                <ul class="product__action">
                                                    <li><a data-toggle="modal" data-target="#@item.ID" title="Quick View" class="quick-view modal-view detail-link" href="#"><span class="ti-plus"></span></a></li>

                                                    @if (session == null)
                                                    {
                                                        <li><a title="Add To Cart" href="/Login/Index"><span class="ti-shopping-cart"></span></a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a title="Add To Cart" href="/them-gio-hang?productId=@item.ID&quantity=1&size="><span class="ti-shopping-cart"></span></a></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product__details">
                                            <h2><a href="/Product/Detail/@item.ID">@item.Name</a></h2>
                                            <ul class="product__price">
                                                <li class="old__price">@item.PromotionPrice$</li>
                                                <li class="new__price">@item.Price$</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- End Single Product -->
                            <!-- Start Single Product -->
                        </div>
                    </div>
                    <!-- Start Load More BTn -->
                    <div class="row mt--60">
                        <div class="col-md-12">
                            <div class="htc__loadmore__btn">
                                <a href="#">load more</a>

                            </div>
                        </div>
                    </div>
                    <!-- End Load More BTn -->
                </div>
            </div>
        </section>
        <!-- End Our Product Area -->
        <!-- Start Footer Area -->
        <footer class="htc__foooter__area gray-bg">
            <div class="container">
                <div class="row">
                    <div class="footer__container clearfix">
                        <!-- Start Single Footer Widget -->
                        <div class="col-md-3 col-lg-3 col-sm-6">
                            <div class="ft__widget">
                                <div class="ft__logo">
                                    <a href="index.html">
                                        <img src="/assets/net/images/logo/logo.png" alt="footer logo">
                                    </a>
                                </div>

                            </div>
                        </div>
                        <!-- End Single Footer Widget -->
                        <!-- Start Single Footer Widget -->
                        <div class="col-md-3 col-lg-3 col-sm-6 smt-30 xmt-30">
                            <div class="footer-address">
                                <ul>
                                    <li>
                                        <div class="address-icon">
                                            <i class="zmdi zmdi-pin"></i>
                                        </div>
                                        <div class="address-text">
                                            <p>01 Võ Văn Ngân, phường Linh Chiểu <br> Quận Thủ Đức, TP.HCM</p>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="address-icon">
                                            <i class="zmdi zmdi-email"></i>
                                        </div>
                                        <div class="address-text">
                                            <a href="#"> NHTShop@gmail.com</a>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="address-icon">
                                            <i class="zmdi zmdi-phone-in-talk"></i>
                                        </div>
                                        <div class="address-text">
                                            <p>+012 345 678 102 </p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <ul class="social__icon">
                                <li><a href="#"><i class="zmdi zmdi-twitter"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-instagram"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-google-plus"></i></a></li>
                            </ul>
                        </div>
                        <!-- Start Single Footer Widget -->
                        <div class="col-md-3 col-lg-3 col-sm-6 smt-30 xmt-30">
                            <div class="ft__widget">
                                <h2 class="ft__title">Thông tin</h2>
                                <ul class="footer-categories">
                                    <li><a href="javascript:;">Về chúng tôi</a></li>
                                    <li><a href="contact.html">Liên hệ với chúng tôi</a></li>
                                    <li><a href="#">Điều khoản và dịch vụ</a></li>
                                    <li><a href="#">Thanh toán và đổi trả</a></li>
                                    <li><a href="#">Giao hàng</a></li>
                                    <li><a href="#">Chính sách riêng tư</a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- Start Single Footer Widget -->
                        <div class="col-md-3 col-lg-3  col-sm-6 smt-30 xmt-30">
                            <div class="ft__widget">
                                <h2 class="ft__title">Bản tin</h2>
                                <div class="newsletter__form">
                                    <p>Đăng kí theo dõi bản tin của chúng tôi và nhận giảm giá 10% với lần thanh toán đầu tiên.</p>

                                </div>
                            </div>
                        </div>
                        <!-- End Single Footer Widget -->
                    </div>
                </div>
                <!-- Start Copyright Area -->
                <div class="htc__copyright__area">
                    <div class="row">
                        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                            <div class="copyright__inner">
                                <div class="copyright">
                                    <p>
                                        © 2019 <a href="https://freethemescloud.com/">Bản quyền của công ty NHT Sport Shop</a>
                                        <br>All Right Reserved.
                                    </p>
                                </div>
                                <ul class="footer__menu">
                                    <li><a href="index.html">Trang chủ</a></li>
                                    <li><a href="shop.html">Sản phẩm</a></li>
                                    <li><a href="contact.html">Liên hệ với chúng tôi</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End Copyright Area -->
            </div>
        </footer>
        <!-- End Footer Area -->
    </div>
    <!-- Body main wrapper end -->
    <!-- QUICKVIEW PRODUCT -->
    <div id="quickview-wrapper">
        <!-- Modal -->
        @foreach (var item in listProduct)
        {
            <div class="modal fade" id="@item.ID" tabindex="-1" role="dialog">
                <div class="modal-dialog modal__container" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        </div>
                        <div class="modal-body">
                            <div class="modal-product">
                                <!-- Start product /assets/net/images -->
                                <div class="product-images">
                                    <div class="main-image images">
                                        <img alt="big images" src="@item.Image">
                                    </div>
                                </div>
                                <!-- end product /assets/net/images -->
                                <div class="product-info">
                                    <h1>@item.Name</h1>
                                    <div class="rating__and__review">
                                        <ul class="rating">
                                            <li><span class="ti-star"></span></li>
                                            <li><span class="ti-star"></span></li>
                                            <li><span class="ti-star"></span></li>
                                            <li><span class="ti-star"></span></li>
                                            <li><span class="ti-star"></span></li>
                                        </ul>
                                        <div class="review">
                                            <a href="#">4 customer reviews</a>
                                        </div>
                                    </div>
                                    <div class="price-box-3">
                                        <div class="s-price-box">
                                            <span class="new-price">@item.Price$</span>
                                            <span class="old-price">@item.PromotionPrice$</span>
                                        </div>
                                    </div>
                                    <div class="quick-desc">

                                    </div>
                                    
                                    <div class="social-sharing">
                                        <div class="widget widget_socialsharing_widget">
                                            <h3 class="widget-title-modal">Share this product</h3>
                                            <ul class="social-icons">
                                                <li><a target="_blank" title="rss" href="#" class="rss social-icon"><i class="zmdi zmdi-rss"></i></a></li>
                                                <li><a target="_blank" title="Linkedin" href="#" class="linkedin social-icon"><i class="zmdi zmdi-linkedin"></i></a></li>
                                                <li><a target="_blank" title="Pinterest" href="#" class="pinterest social-icon"><i class="zmdi zmdi-pinterest"></i></a></li>
                                                <li><a target="_blank" title="Tumblr" href="#" class="tumblr social-icon"><i class="zmdi zmdi-tumblr"></i></a></li>
                                                <li><a target="_blank" title="Pinterest" href="#" class="pinterest social-icon"><i class="zmdi zmdi-pinterest"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="addtocart-btn">
                                        @if (session != null)
                                        {
                                            <button><a href="/them-gio-hang?productId=@item.ID&quantity=1&size=">Thêm vào giỏ hàng</a></button>
                                        }
                                        else
                                        {
                                            <button><a href="/Login/Index">Thêm vào giỏ hàng</a></button>
                                        }

                                    </div>
                                </div><!-- .product-info -->
                            </div><!-- .modal-product -->
                        </div><!-- .modal-body -->
                    </div><!-- .modal-content -->
                </div><!-- .modal-dialog -->
            </div>
        }
        <!-- END Modal -->
    </div>
    <!-- END QUICKVIEW PRODUCT -->
    <!-- Placed js at the end of the document so the pages load faster -->
    <!-- jquery latest version -->
    <script src="/assets/net/js/vendor/jquery-1.12.0.min.js"></script>
    <script src="/assets/net/js/jquery-ui.js"></script>
    <!-- Bootstrap framework js -->
    <script src="/assets/net/js/bootstrap.min.js"></script>
    <!-- All js plugins included in this file. -->
    <script src="/assets/net/js/plugins.js"></script>
    <script src="/assets/net/js/slick.min.js"></script>
    <script src="/assets/net/js/owl.carousel.min.js"></script>
    <!-- Waypoints.min.js. -->
    <script src="/assets/net/js/waypoints.min.js"></script>
    <!-- Main js file that contents all jQuery plugins activation. -->
    <script src="/assets/net/js/main.js"></script>
    <script src="/assets/net/js/Controller/baseController.js"></script>
</body>

</html>
